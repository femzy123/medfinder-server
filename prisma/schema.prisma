// This is your Prisma schema file,
// learn more about it in the docs https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  password String
  name    String
  phone   String
  address Address
  country String
  type    String
  role    String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
  Institution Institution[]
  Professional Professional[]
}

type Address {
  street String
  city   String
  state  String
}

model Institution {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  institutionType  String
  geolocation Json
  website String
  services String[]
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
  user    User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String @db.ObjectId @unique
}

model Professional {
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  specialty String
  institution String
  geolocation Json
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
  website String
  bio String
  user    User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String @db.ObjectId @unique
  education Education[]
  experience Experience[]
  certifications String[]
}

type Education {
  institutionName String
  degree String
  fieldOfStudy String
  startYear Int
  endYear Int
}

type Experience {
  institutionName String
  position String
  startYear Int
  endYear Int
}

enum Role {
  USER
  ADMIN
  MEDIC
}